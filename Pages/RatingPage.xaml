<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InteractiveRatingComponent.Pages.RatingPage">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label Text="Rate us"
               TextTransform="Uppercase"
               Style="{StaticResource h1}"/>

        <Frame>
            <VerticalStackLayout Spacing="20">
                <Label Text="How did we go?"
                       Style="{StaticResource h2}"/>
                <Label Text="Please let us know how we did with your support request. All feedback appreciated to help us improve our offering!" />
                <HorizontalStackLayout Spacing="10"
                                       HorizontalOptions="Center">
                    <Image Source="star_fill_nothover.png" />
                    <Image Source="star_fill_nothover.png" />
                    <Image Source="star_fill_nothover.png" />
                    <Image Source="star_fill_nothover.png" />
                    <Image Source="star_fill_nothover.png" />
                </HorizontalStackLayout>
                <Button Text="Submit"
                        Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
    
</ContentPage>